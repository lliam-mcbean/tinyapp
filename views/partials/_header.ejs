<header>
    <nav class="navbar navbar-expand-md navbar-dark bg-success justify-content-between">
      <a class="navbar-brand" href="/urls">TinyApp</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse justify-content-between" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          <a class="nav-item nav-link" href="/urls">My URLs</a>
          <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
        </div>
        
        <% if (username) { %>
          <form action="/logout" method="POST" class="form-inline">
            <p style="margin: 0px 8px 0px 0px;">Logged In As: <span style="color: #ffc000; font-size: 20px; padding: 3px; text-shadow: 0.5px 0.5px black;"><%= username %></span></p>
            <button type="submit" class="btn btn-outline-dark">Logout</button>
          </form>
        <% } else { %> 
          <form action="/login" method="POST" class="form-inline">
            <input class="form-control" type="text" name="username" class="form-control mr-sm-2" style='margin-right: 5px;'>
            <button type="submit" class="btn btn-outline-dark" class="btn btn-outline-success">Login</button>
          </form>
        <% } %>
      
      </div>
    </nav>
  </header>